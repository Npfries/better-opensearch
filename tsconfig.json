{
    "compilerOptions": {
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "declaration": true,
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"]
}
